extends ../index

block main-content
    .container
        .jumbotron.text-center
            h3 Your Messages
        ul.nav.nav-tabs
            - for (var i = 0; i < messages.length; i++){
            if i === 0
                li.active
                    a.btn-info(href='#' + messages[i].from.username + i, data-toggle='tab', aria-expanded='true')= messages[i].from.username
            else
                li
                    a.btn-info(href='#' + messages[i].from.username + i , data-toggle='tab', aria-expanded='true')= messages[i].from.username
            -}
        #myTabContent.tab-content
            - for (var i = 0; i < messages.length; i++){
            if i == 0
                .jumbotron.tab-pane.fade.active.in(id=messages[i].from.username + i)
                    h4= messages[i].title
                    p= messages[i].content
            else
                .jumbotron.tab-pane.fade(id=messages[i].from.username + i)
                    h4= messages[i].title
                    p= messages[i].content
            -}